<%- include ("./partials/header.ejs") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%>> </div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
            <div class="field">
                <label> Blog Name</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label> Image URL</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label> Blog Content</label>
                <textarea name="blog[body]" cols="30" rows="6" placeholder="Body"><%=blog.body%></textarea>
            </div>
            <div class="field">
                <input class="ui orange big basic button" type="Submit">
            </div>
        </form>
    </div>
<%- include ("./partials/footer.ejs") %>
