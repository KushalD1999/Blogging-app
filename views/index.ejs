<%- include ("./partials/header.ejs") %>

<section class="details-card">
    <div class="container">
        <div class="row">
            <% blogs.forEach(function (blog) { %>
                <div class="col-md-4">
                    <div class="card-content">
                        <div class="card-img" >
                            <img src="<%=blog.image%>" alt="">
                            <span><h4><%=blog.title%></h4></span>
                        </div>
                        <div class="card-desc" style="padding-bottom: 30px;">
                            <h3><%=blog.title%></h3>
                            <p><%=blog.body.substring(0,100) %>....</p>
                            <a href="/blogs/<%=blog._id%>" class="btn-card" center;"> Read More</a>
                        </div>
                    </div>
                </div>
            <%})%>
        </div>
    </div>
</section>


<%- include ("./partials/footer.ejs") %>
