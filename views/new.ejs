<%- include ("./partials/header.ejs") %>
<div class="ui main text container segment">
    <div class="ui huge header">Create New Blog    </div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label> Blog Name</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label> Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label> Blog Content</label>
            <textarea name="blog[body]" cols="30" rows="6" placeholder="Body"></textarea>
        </div>
        <div class="field">
            <input class="ui orange big basic button" type="Submit">
        </div>
    </form>
</div>
